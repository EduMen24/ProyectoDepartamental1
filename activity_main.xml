<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="#ECECEC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú de Prácticas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/btnPractica1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola Mundo"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnPractica2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contador de Clicks"
        android:backgroundTint="#03DAC5"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnPractica3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contador con Tiempo"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnPractica4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scores"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnPractica5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SQLite Ejemplo"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnPractica6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clicks SQL"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

</LinearLayout>
